{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf ./build",
            "windows": {
                "command": "if exist .\\build ( rmdir /s /q .\\build )"
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "npm",
            "script": "build",
            "problemMatcher": {
                "owner": "typescript",
                "pattern": {
                    "regexp": "^([^\\\\s].*)\\\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\\\):\\\\s+(error|warning|info)\\\\s+(TS\\d+)\\\\s*:\\\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "watch mode",
                    "endsPattern": "bundle creation complete"
                }
            }
        },
        {
            "label": "pack",
            "type": "shell",
            "command": "npx @anthropic-ai/mcpb pack",
            "problemMatcher": []
        },
        {
            "label": "build:clean",
            "dependsOrder": "sequence",
            "dependsOn": [
                "clean",
                "build",
                "pack"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}


